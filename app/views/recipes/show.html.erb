<h1>Recipe Details </h2>
<h1><%=@recipe.name%></h1>
<div class="recipe-container">
  <div class="recipe-header">
    <section>
      <p>Prepration Time: <%=@recipe.preparation_time %> Hour</p>
      <p>Cooking Time: <%=@recipe.cooking_time %> Hour</p>
      <p>Steps go here...</p>
      <%= link_to  "Generate Shopping List" %>
    </section>
    <section>
      <%= form_for @recipe do |f| %>
        <%= f.hidden_field :public, value: @recipe.public == false %>
        Public: 
        <%= f.submit @recipe.public.to_s %>
      <% end %>
      <%= link_to  "Add ingredient" %>
    </section>
  </div>
  <table>
    <tr>
      <th>Food</th>
      <th>Quantity</th>
      <th>Value</th>
      <th>Actions</th>
    </tr>
    
  </table>
</div>