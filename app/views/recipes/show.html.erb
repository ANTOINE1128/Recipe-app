<!-- app/views/recipes/show.html.erb -->
<h1>Recipe Details</h1>
<h2><%= @recipe.name %></h2>
<div class="recipe-container">
  <div class="recipe-header">
    <section>
      <p>Preparation Time: <%= @recipe.preparation_time %> Hour</p>
      <p>Cooking Time: <%= @recipe.cooking_time %> Hour</p>
      <p>Steps go here...</p>
      <%= link_to "Generate Shopping List" %>
    </section>
    <section>
      <%= form_for @recipe do |f| %>
        <%= f.hidden_field :public, value: @recipe.public == false %>
        Public:
        <%= f.submit @recipe.public.to_s %>
      <% end %>
      <%= link_to "Add ingredient" %>
    </section>
  </div>
  <table>
    <tr>
      <th>Food</th>
      <th>Quantity</th>
      <th>Value</th>
      <th>Actions</th>
    </tr>

    <% if @recipe.recipe_foods.any? %> <!-- Check if there are associated recipe_foods -->
      <% @recipe.recipe_foods.each do |recipe_food| %>
        <tr>
          <td><%= recipe_food.food.name %></td> <!-- Display food name -->
          <!-- Display other food-related information as needed -->
          <td><%= recipe_food.quantity %></td>
          <td><%= recipe_food.food.price * recipe_food.quantity %></td>
          <td>
            <%= link_to 'Modify', edit_recipe_recipe_food_path(@recipe, recipe_food) %>
            <%= link_to 'Delete', recipe_recipe_food_path(@recipe, recipe_food), method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="4">No associated foods for this recipe.</td>
      </tr>
    <% end %>
  </table>
</div>
