<!-- app/views/recipes/_form.html.erb -->
<div class="users-container">
<div class="food-recipe-container">
<div class="mb-3">
<h3>New Recipe</h3>
<%= form_with(model: recipe, local: true) do |form| %>
  <div class="mb-3">
  <%= form.label :name, class:"form-label"  %>
    <%= form.text_field :name, class:"form-control ip-size"  %>
  </div>
  
  <div class="mb-3">
    <%= form.label :preparation_time, class:"form-label"  %>
    <%= form.number_field :preparation_time, class:"form-control ip-size"  %>
  </div>

  <div class="mb-3">
    <%= form.label :cooking_time, class:"form-label"  %>
    <%= form.number_field :cooking_time, class:"form-control ip-size"  %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class:"form-label"  %>
    <%= form.text_area :description, class:"form-control ip-size"  %>
  </div>

  <div class="field">
    <%= form.label :public %>
    <%= form.check_box :public %>
  </div>

  <div class="actions">
  <%= form.submit "Create Recipe", class:"btn btn-primary" %>
  </div>
<% end %>
</div>
</div>
</div>